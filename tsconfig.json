{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "lib": ["es6"],
        "paths": {
            "src/*": [ "." ]
          },     
          "target": "es2016",
          "module":"commonjs",
          "outDir": "src",
          "allowSyntheticDefaultImports": true,
          "esModuleInterop":true,
          "noImplicitAny": false,
    },
    "typeRoots": [
  "./typings",
  "./node_modules",
  "./node_modules/@types/"
],
 "include" : [
    "src/**/*.ts"   /* Include every ts file in source folder */
],
    "exclude": ["./node_modules"],
    "baseUrl": "./src/*",
  }
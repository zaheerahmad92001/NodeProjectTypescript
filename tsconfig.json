{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "lib": ["es6"],
        "paths": {
            "src/*": [ "." ]
          },     
          "target": "es2016",
          "module":"CommonJS",
          "outDir": "src",
          "allowSyntheticDefaultImports": true,
          "esModuleInterop":true,
    },
 "include" : [
    "src/**/*.ts"   /* Include every ts file in source folder */
],
    "exclude": ["node_modules"],
    "baseUrl": "./src/*",
  }